@*@using PersonelProje.Data*@
@model List<PersonelProje.Data.Ulke>
@{
    ViewData["Title"] = "Liste";
}

<h1>Ülke Listesi</h1>
<div class="row">
    <div class="col-md-7">
        <a class="btn btn-primary" href="/Ulke/Ekle">Yeni Giriş</a>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Adı</th>
                    <th>Güncelle</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.UlkeAd</td>
                        <td><a class="btn btn-success" href="/Ulke/Guncel/@item.Id">Güncelle</a></td>
                        <td><a class="btn btn-danger" href="/Ulke/Sil/@item.Id">Sil</a></td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>


